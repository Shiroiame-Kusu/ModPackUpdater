{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Enrichers.Environment",
      "Serilog.Filters.Expressions"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Serilog.AspNetCore.RequestLoggingMiddleware": "Information"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentUserName" ],
    "Properties": {
      "System": "ModPackUpdater"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] (System={System}, Component={Component}, CorrId={CorrelationId}) {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/app-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "shared": true,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] (System={System}, Component={Component}, CorrId={CorrelationId}) {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              { "Name": "ByIncludingOnly", "Args": { "expression": "SourceContext = 'Serilog.AspNetCore.RequestLoggingMiddleware'" } }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "logs/access-.log",
                  "rollingInterval": "Day",
                  "retainedFileCountLimit": 7,
                  "shared": true,
                  "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {RequestMethod} {StatusCode} in {Elapsed} ms (Url={FullUrl}, ClientIP={ClientIp}, Host={RequestHost}, UA={UserAgent}, IP={RemoteIpAddress}, CorrId={CorrelationId}){NewLine}"
                }
              },
              {
                "Name": "Console",
                "Args": {
                  "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {RequestMethod} {StatusCode} in {Elapsed} ms (Url={FullUrl}, ClientIP={ClientIp}, Host={RequestHost}, UA={UserAgent}, IP={RemoteIpAddress}, CorrId={CorrelationId}){NewLine}"
                }
              }
            ]
          }
        }
      }
    ]
  },
  "ManifestWarmup": {
    "Enabled": true,
    "BlockOnStartup": false,
    "MaxConcurrency": 32
  },
  "Concurrency": {
    "Hash": 8,
    "ModExtract": 4
  },
  "AllowedHosts": "*"
}
